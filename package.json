{
  "name": "em-code-reviewer",
  "version": "1.0.0",
  "description": "Node.js tools for code review automation (eslint, npm audit, snyk, prettier, stylelint, etc.)",
  "main": "index.js",
  "scripts": {
    "lint": "eslint .",
    "prettier": "prettier --check .",
    "stylelint": "stylelint '**/*.{css,scss,less,sss,styl}'",
    "markdownlint": "markdownlint '**/*.md'",
    "jsonlint": "jsonlint '**/*.json'",
    "depcheck": "depcheck .",
    "audit": "audit-ci --moderate"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^8.57.0",
    "npm-check-updates": "^16.14.15",
    "snyk": "^1.1292.0",
    "prettier": "^3.2.5",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsdoc": "^46.9.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "depcheck": "^1.4.7",
    "audit-ci": "^6.4.0",
    "markdownlint-cli": "^0.39.0",
    "jsonlint": "^1.6.3",
    "stylelint": "^16.3.1",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-config-prettier": "^9.0.4",
    "stylelint-order": "^6.0.3",
    "stylelint-scss": "^6.2.1"
  }
} 